//The let keyword is similar to the var keyword, except that these variables are blocked-scope. For example:

let x = 10;
if (x === 10) {
    let x = 20;
    console.log(x); // 20:  reference x inside the block
}
console.log(x); // 10: reference at the begining of the script


var y = 10;
if (y === 10) {
    var y = 20; //references the out of block statement
    console.log(y); // 20
}
console.log(y); // 20

